<div class="col-6 mx-auto">
  <% @maps.each do |map| %>
    <div class="card mb-5">
      <div class="row no-gutters">
        <div class="col-lg-7">
          <%= link_to map do %>
            <!-- image_magickのメソッドを使用して画像サイズを変更して表示 -->
            <% if map.images.attached? %>
              <%= image_tag map.images.first.variant(resize_to_fill: [800, 800]).processed, class: "card-img"  %>
            <% else %>
              <%= image_tag "no_image", class: "card-img" %>
            <% end %>
          <% end %>
        </div>
        <div class="col-lg-5">
          <div class="card-text">
            <h3>&nbsp; <%= map.name %></h3>
            &nbsp; &nbsp;種類 : <%= map.type %> <br>
            &nbsp; &nbsp;定休日 : <%= map.closing_day %><br>
            &nbsp; &nbsp;開店時間 : <%= map.open_time.strftime('%H:%M') %><br>
            &nbsp; &nbsp;閉店時間 : <%= map.close_time.strftime('%H:%M') %><br>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>