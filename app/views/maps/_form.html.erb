<%= form_with model: map, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_area :name, class: "form-control", rows: "1" %>
    <%= f.label :type %>
    <%= f.text_area :type, class: "form-control", rows: "1" %>
  </div>
<div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <p>
    <%= f.submit class: "btn btn-block btn-primary" %>
  </p>
  <p>
    <%= link_to '戻る', :back, class: "btn btn-block btn-secondary" %>
  </p>
<% end %>